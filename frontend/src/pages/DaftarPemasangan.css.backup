}

.btn-komisi.belum:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 12px 30px rgba(239, 68, 68, 0.5);
}

/* Delete Dialog Specific */
.delete-dialog-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.delete-dialog-icon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: var(--gradient-danger);
  margin: 0 auto var(--space-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40px;
  color: var(--white);
  box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
  animation: warningPulse 2s ease-in-out infinite;
}

@keyframes warningPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.delete-customer-info {
  display: flex;
  gap: var(--space-md);
  padding: var(--space-lg);
  background: var(--gray-50);
  border-radius: var(--radius);
  margin-bottom: var(--space-lg);
}

.delete-customer-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: var(--gradient-purple);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: 28px;
  flex-shrink: 0;
}

.delete-customer-details h4 {
  font-size: 18px;
  font-weight: 800;
  color: var(--gray-900);
  margin-bottom: 6px;
}

.delete-customer-details p {
  margin: 4px 0;
  color: var(--gray-600);
  font-size: 13px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.delete-warning {
  display: flex;
  gap: var(--space-md);
  padding: var(--space-lg);
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  border-radius: var(--radius);
  border: 2px solid var(--danger);
  margin-bottom: var(--space-lg);
}

.warning-icon {
  font-size: 40px;
  color: var(--danger);
}

.warning-text h4 {
  font-size: 16px;
  font-weight: 800;
  color: var(--danger-dark);
  margin-bottom: 6px;
}

.warning-text p {
  font-size: 14px;
  color: #991b1b;
  line-height: 1.6;
}

.delete-dialog-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space);
}

.btn-delete-cancel {
  padding: var(--space-md);
  border: 2px solid var(--gray-300);
  background: var(--white);
  color: var(--gray-700);
  border-radius: var(--radius);
  cursor: pointer;
  font-weight: 700;
  font-size: 15px;
  transition: all var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-delete-cancel:hover {
  background: var(--gray-100);
  transform: translateY(-2px);
}

.btn-delete-confirm {
  padding: var(--space-md);
  border: none;
  background: var(--gradient-danger);
  color: var(--white);
  border-radius: var(--radius);
  cursor: pointer;
  font-weight: 700;
  font-size: 15px;
  transition: all var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
}

.btn-delete-confirm:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(239, 68, 68, 0.5);
}

/* Detail Dialog Specific */
.detail-dialog-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.detail-dialog-icon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: var(--gradient-info);
  margin: 0 auto var(--space-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40px;
  color: var(--white);
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
}

.detail-customer-header {
