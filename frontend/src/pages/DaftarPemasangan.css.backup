}

.detail-info-label {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  color: var(--gray-600);
  margin-bottom: 6px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 700;
}

.detail-info-label i {
  font-size: 14px;
  color: var(--primary-purple);
}

.detail-info-value {
  font-size: 15px;
  color: var(--gray-900);
  font-weight: 600;
}

.detail-komisi-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border-radius: var(--radius-sm);
  font-size: 12px;
  font-weight: 700;
  border: 2px solid;
}

.detail-komisi-badge.dibayar {
  background: linear-gradient(135deg, #dcfce7, #bbf7d0);
  color: #166534;
  border-color: var(--success);
}

.detail-komisi-badge.belum {
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  color: #991b1b;
  border-color: var(--danger);
}

.detail-komisi-badge.pending {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  border-color: var(--warning);
}

.detail-catatan-section {
  background: var(--gray-50);
  padding: var(--space-lg);
  border-radius: var(--radius);
  margin-bottom: var(--space-lg);
}

.detail-catatan-header {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  font-weight: 700;
  color: var(--gray-700);
  margin-bottom: var(--space);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.detail-catatan-content {
  font-size: 14px;
  color: var(--gray-600);
  line-height: 1.6;
}

.detail-dialog-footer {
  display: flex;
  justify-content: center;
  padding-top: var(--space-lg);
  border-top: 2px solid var(--gray-100);
}

.btn-detail-close {
  padding: 14px 32px;
  border: 2px solid var(--gray-300);
  background: var(--white);
  color: var(--gray-700);
  border-radius: var(--radius);
  cursor: pointer;
  font-weight: 700;
  font-size: 15px;
  transition: all var(--transition);
  display: flex;
  align-items: center;
  gap: 10px;
}

.btn-detail-close:hover {
  background: var(--gray-100);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* =============================================================================
   CUSTOM NOTIFICATIONS - PREMIUM DESIGN
   ============================================================================= */

.custom-notification {
  position: fixed;
  top: var(--space-lg);
  right: var(--space-lg);
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: var(--shadow-xl);
  z-index: 2000;
  min-width: 350px;
  max-width: 450px;
  transform: translateX(500px);
  opacity: 0;
  transition: all var(--transition-slow);
  border-left: 6px solid;
  overflow: hidden;
}

.custom-notification.show {
  transform: translateX(0);
  opacity: 1;
  animation: notificationSlideIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes notificationSlideIn {
  0% {
    transform: translateX(500px) rotateY(90deg);
    opacity: 0;
  }
  100% {
    transform: translateX(0) rotateY(0deg);
    opacity: 1;
  }
}

.custom-notification.success {
  border-left-color: var(--success);
}

.custom-notification.error {
  border-left-color: var(--danger);
}

.custom-notification.info {
  border-left-color: var(--info);
}

.notification-content {
  display: flex;
  align-items: flex-start;
  gap: var(--space-md);
  position: relative;
  z-index: 1;
}

.notification-icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  flex-shrink: 0;
  color: var(--white);
  animation: iconBounceIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes iconBounceIn {
  0% {
    transform: scale(0) rotate(-180deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
  }
}

.custom-notification.success .notification-icon {
  background: var(--gradient-success);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
}

.custom-notification.error .notification-icon {
  background: var(--gradient-danger);
  box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
}

.custom-notification.info .notification-icon {
  background: var(--gradient-info);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

.notification-text {
  flex: 1;
}

.notification-title {
  font-size: 16px;
  font-weight: 800;
  color: var(--gray-900);
  margin-bottom: 4px;
}

.notification-message {
  font-size: 14px;
  color: var(--gray-600);
  line-height: 1.5;
}

.notification-close {
  position: absolute;
  top: var(--space);
  right: var(--space);
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: var(--gray-100);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition);
  color: var(--gray-600);
}

.notification-close:hover {
  background: var(--gray-200);
  color: var(--gray-900);
  transform: rotate(90deg);
}

.notification-progress {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 4px;
  background: var(--primary-purple);
  width: 100%;
  animation: notificationProgress 3s linear;
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
}

.custom-notification.success .notification-progress {
  background: var(--success);
}

.custom-notification.error .notification-progress {
  background: var(--danger);
}

.custom-notification.info .notification-progress {
  background: var(--info);
}

@keyframes notificationProgress {
  from { width: 100%; }
  to { width: 0%; }
}

/* =============================================================================
   UTILITY CLASSES & HELPERS
   ============================================================================= */

.auth-warning,
.loading-notice {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border: 2px solid var(--warning);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  animation: warningSlideDown 0.6s ease-out;
}

@keyframes warningSlideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.auth-warning-content,
.loading-content {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.auth-warning-content i,
.loading-content i {
  font-size: 28px;
  color: var(--warning-dark);
  flex-shrink: 0;
}

.auth-warning-text,
.loading-text {
  flex: 1;
  color: #92400e;
}

.auth-warning-text strong,
.loading-text strong {
  font-weight: 800;
  display: block;
  margin-bottom: 4px;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 12px;
  height: 12px;
}

::-webkit-scrollbar-track {
  background: var(--gray-100);
  border-radius: var(--radius-sm);
}

::-webkit-scrollbar-thumb {
  background: var(--gradient-purple);
  border-radius: var(--radius-sm);
  border: 2px solid var(--gray-100);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--gradient-info);
}

/* Selection Styling */
::selection {
  background: var(--primary-purple);
  color: var(--white);
}

::-moz-selection {
  background: var(--primary-purple);
  color: var(--white);
}

/* Print Styles */
@media print {
  .header-actions,
  .table-controls,
  .action-buttons-compact,
  .mobile-card-actions,
  .notification,
  .modal-overlay {
    display: none !important;
  }
  
  .page-header {
    background: var(--primary-purple) !important;
    color: var(--white) !important;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }
  
  .pemasangan-table {
    font-size: 12px;
  }
  
  .table-container {
    box-shadow: none;
    border: 1px solid var(--gray-300);
  }
}

/* =============================================================================
   END OF PREMIUM CSS
   ============================================================================= */

