}

.btn-secondary:hover {
  background: #e5e7eb;
}

/* =============================================================================
   RESPONSIVE DESIGN - MOBILE FIRST
   ============================================================================= */

/* Additional animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Loading shimmer effect */
@keyframes shimmer {
  0% {
    background-position: -468px 0;
  }
  100% {
    background-position: 468px 0;
  }
}

.table-controls.loading {
  position: relative;
  overflow: hidden;
}

.table-controls.loading::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  background-size: 200px 100%;
  animation: shimmer 2s infinite;
}

.controls-left {
  animation: slideInLeft 0.8s ease-out;
}

.controls-right {
  animation: slideInRight 0.8s ease-out;
}

.search-wrapper {
  animation: fadeInUp 0.6s ease-out;
  animation-delay: 0.2s;
  animation-fill-mode: both;
}

.filter-item {
  animation: fadeInUp 0.6s ease-out;
}

.filter-item:nth-child(1) { animation-delay: 0.1s; }
.filter-item:nth-child(2) { animation-delay: 0.2s; }
.filter-item:nth-child(3) { animation-delay: 0.3s; }

.status-filter-btn {
  animation: fadeInUp 0.6s ease-out;
}

.status-filter-btn:nth-child(1) { animation-delay: 0.2s; }
.status-filter-btn:nth-child(2) { animation-delay: 0.3s; }
.status-filter-btn:nth-child(3) { animation-delay: 0.4s; }

/* Mobile (≤767px) */
@media (max-width: 767px) {
  .daftar-pemasangan {
    padding: 12px;
  }
  
  .page-header {
    padding: 12px 16px;
    margin-bottom: 16px;
  }
  
  .header-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }
  
  .header-actions {
    width: 100%;
    justify-content: space-between;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .table-container {
    display: none;
  }
  
  .mobile-card-container {
    display: block;
  }
  
  .table-controls {
    grid-template-columns: 1fr;
    gap: 20px;
    padding: 24px 20px;
  }
  
  .controls-main {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .controls-left {
    flex-direction: column;
    align-items: stretch;
    gap: 20px;
  }
  
  .search-wrapper {
    min-width: auto;
    max-width: none;
  }
  
  .filters-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 16px;
  }
  
  .filter-item {
    min-width: auto;
  }
  
  .filter-select {
    min-width: auto;
  }
  
  .status-buttons {
    justify-content: center;
    padding: 8px;
    gap: 8px;
  }
  
  .status-filter-btn {
    min-width: 80px;
    padding: 10px 16px;
    font-size: 12px;
  }
  
  .modal-content {
    margin: 20px;
    max-width: none;
    width: auto;
  }
}

/* Tablet (768px - 1199px) */
@media (min-width: 768px) and (max-width: 1199px) {
  .daftar-pemasangan {
    padding: 16px;
  }
  
  .mobile-card-container {
    display: none;
  }
  
  .table-container {
    display: block;
  }
  
  .pemasangan-table {
    min-width: 1200px;
    font-size: 13px;
  }
  
  .pemasangan-table th,
  .pemasangan-table td {
    padding: 10px 8px;
  }
  
  /* Hide less important columns on tablet */
  .pemasangan-table th:nth-child(8),
  .pemasangan-table td:nth-child(8) {
    display: none; /* Hide Tanggal Pasang */
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .action-buttons-compact {
    min-width: 100px;
    padding: 6px;
  }
  
  .action-btn-sm {
    padding: 5px 8px;
    font-size: 10px;
    min-width: 28px;
    height: 24px;
  }
  
  .table-controls {
    flex-direction: column;
    align-items: stretch;
    gap: 12px;
  }
  
  .search-input {
    min-width: auto;
    max-width: none;
  }
}

/* Desktop (≥1200px) */
@media (min-width: 1200px) {
  .mobile-card-container {
    display: none;
  }
  
  .table-container {
    display: block;
  }
  
  .pemasangan-table {
    min-width: 100%;
  }
  
  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* Large Desktop (≥1600px) */
@media (min-width: 1600px) {
  .daftar-pemasangan {
    padding: 20px 24px;
  }
  
  .pemasangan-table {
    font-size: 15px;
  }
  
  .pemasangan-table th,
  .pemasangan-table td {
    padding: 14px 12px;
  }
}

/* =============================================================================
   UTILITY CLASSES
   ============================================================================= */

.text-center { text-align: center; }
.text-right { text-align: right; }
.font-bold { font-weight: 700; }
.text-sm { font-size: 12px; }
.text-xs { font-size: 11px; }
.mb-0 { margin-bottom: 0; }
.mt-2 { margin-top: 8px; }

/* Loading states */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* Print styles */
@media print {
  .header-actions,
  .table-controls,
  .action-buttons,
  .mobile-card-actions {
    display: none !important;
  }
  
  .page-header {
    background: #7c3aed !important;
    color: white !important;
  }
  
  .pemasangan-table {
    font-size: 12px;
  }
}
/* =============================================================================
   MODAL STYLES - PREMIUM DESIGN
   ============================================================================= */

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.75);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--space-lg);
  animation: modalOverlayFade 0.3s ease-out;
}

@keyframes modalOverlayFade {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content,
.komisi-dialog,
.delete-dialog,
.detail-dialog {
  background: var(--white);
  border-radius: var(--radius-xl);
  padding: var(--space-2xl);
  max-width: 540px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  position: relative;
  animation: modalSlideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
  padding-bottom: var(--space-md);
  border-bottom: 2px solid var(--gray-100);
  position: relative;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 60px;
  height: 2px;
  background: var(--gradient-purple);
}

.modal-header h3 {
  font-size: 24px;
  font-weight: 800;
  color: var(--gray-900);
  margin: 0;
  display: flex;
  align-items: center;
  gap: 12px;
}

.modal-header h3 i {
  font-size: 28px;
  color: var(--primary-purple);
}

.modal-close {
  background: var(--gray-100);
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  color: var(--gray-600);
  transition: all var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

.modal-close:hover {
  background: var(--danger);
  color: var(--white);
  transform: rotate(90deg) scale(1.1);
}

.modal-body {
  margin-bottom: var(--space-lg);
}

.form-group {
  margin-bottom: var(--space-lg);
}

.form-group label {
  display: block;
  font-size: 14px;
  font-weight: 700;
  color: var(--gray-700);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: 14px 16px;
  border: 2px solid var(--gray-200);
  border-radius: var(--radius);
  font-size: 15px;
  font-weight: 500;
  transition: all var(--transition);
  background: var(--gray-50);
  color: var(--gray-900);
  font-family: inherit;
}

.form-group input:hover,
.form-group select:hover,
.form-group textarea:hover {
  border-color: var(--gray-300);
  background: var(--white);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--primary-purple);
  background: var(--white);
  box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 100px;
  line-height: 1.6;
}

.form-help {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: var(--gray-500);
  margin-top: 6px;
  font-style: italic;
}

.form-help i {
  font-size: 14px;
  color: var(--info);
}

.required-field {
  color: var(--danger);
  margin-left: 4px;
}

.modal-footer,
.modal-actions {
  display: flex;
  gap: var(--space);
  justify-content: flex-end;
  padding-top: var(--space-lg);
  border-top: 2px solid var(--gray-100);
}

.btn {
  padding: 14px 28px;
  border: none;
  border-radius: var(--radius);
  font-size: 15px;
  font-weight: 700;
  cursor: pointer;
  transition: all var(--transition);
  display: flex;
  align-items: center;
  gap: 10px;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
  width: 300px;
  height: 300px;
}

.btn-primary {
  background: var(--gradient-purple);
  color: var(--white);
  box-shadow: var(--shadow-purple);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 15px 35px rgba(124, 58, 237, 0.4);
}

.btn-secondary {
  background: var(--gray-200);
  color: var(--gray-700);
}

.btn-secondary:hover {
  background: var(--gray-300);
  transform: translateY(-2px);
}

.btn-success {
  background: var(--gradient-success);
  color: var(--white);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
}

.btn-success:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(16, 185, 129, 0.5);
}

.btn i {
  font-size: 18px;
  position: relative;
  z-index: 1;
}

/* Customer Summary in Modals */
.customer-summary,
.customer-info-card {
  background: linear-gradient(135deg, var(--gray-50), var(--gray-100));
  padding: var(--space-lg);
  border-radius: var(--radius);
  margin-bottom: var(--space-lg);
  border-left: 4px solid var(--primary-purple);
}

.customer-summary h4 {
  font-size: 18px;
  font-weight: 800;
  color: var(--gray-900);
  margin: 0 0 8px 0;
}

.customer-summary p {
  margin: 4px 0;
  color: var(--gray-600);
  font-size: 14px;
}

.customer-avatar-large {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: var(--gradient-purple);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: 40px;
  margin: 0 auto var(--space-md);
  box-shadow: var(--shadow-purple);
}

.customer-details-card {
  text-align: center;
}

.customer-details-card h4 {
  font-size: 20px;
  font-weight: 800;
  color: var(--gray-900);
  margin-bottom: var(--space);
}

.customer-details-card p {
  margin: 6px 0;
  color: var(--gray-600);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

/* Komisi Dialog Specific */
.komisi-dialog-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.komisi-dialog-icon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: var(--gradient-success);
  margin: 0 auto var(--space-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40px;
  color: var(--white);
  box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
}

.komisi-question {
  text-align: center;
  margin-bottom: var(--space-lg);
}

.komisi-question h4 {
  font-size: 20px;
  font-weight: 800;
  color: var(--gray-900);
  margin-bottom: var(--space-sm);
}

.komisi-question p {
  color: var(--gray-600);
}

.komisi-dialog-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space);
}

.btn-komisi {
  padding: var(--space-md);
  border: none;
  border-radius: var(--radius);
  cursor: pointer;
  font-weight: 700;
  font-size: 15px;
  transition: all var(--transition);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-komisi i {
  font-size: 32px;
}

.btn-komisi.sudah {
  background: var(--gradient-success);
  color: var(--white);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
}

.btn-komisi.sudah:hover {
  transform: translateY(-4px) scale(1.05);
