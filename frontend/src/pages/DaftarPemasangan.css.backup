  border-radius: 6px;
  border: 1px solid #10b981;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

.agent-badge {
  background: linear-gradient(135deg, #faf5ff, #f3e8ff);
  color: #7c3aed;
  padding: 4px 8px;
  border-radius: 6px;
  border: 1px solid #a855f7;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

/* Additional table cell styling */
.pemasangan-table td:first-child {
  font-weight: 600;
  color: #374151;
}

.pemasangan-table td .bi {
  margin-right: 4px;
}

/* WhatsApp and phone number styling */
.whatsapp-btn,
.phone-btn {
  background: none;
  border: none;
  color: #059669;
  cursor: pointer;
  padding: 4px;
